@model WebSales.Models.ClientCreateView

<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="nameModalOperation" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="nameModalOperation" class="modal-title">Add client</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    <label id="serverError"></label>
                    @Html.ValidationSummary(true)
                    <div class="form-group" id="createForm">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text", @placeholder = "Enter name" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <label id="serverError" style="color: red;"></label>
                    <input id="createBtn" type="submit" class="btn btn-success" value="Create" />
                }
            </div>
        </div>
    </div>
</div>

<script>
    $("#modalCreate").ready(() => {
        showCreateClient();
    });

    $('form').on("submit", function (event) {
        event.preventDefault();

        $.ajax({
            type: 'POST',
            url: '@Url.Action("Create", "CLient")',
            data: $('form').serialize(),
            success: function (result) {
                if (result.result) {
                    hideCreateClient();
                    load();
                }
                else {
                    var message = result.message != undefined ? result.message : "Error on server";
                    $("#serverError").text(message);
                }
            }
        });
    })

    function showCreateClient() {
        $("#modalCreate").modal();
    }

    function hideCreateClient() {
        $("#modalCreate").modal('hide');
    }
</script>