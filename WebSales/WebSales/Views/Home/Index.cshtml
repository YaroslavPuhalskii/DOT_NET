@{
    ViewBag.Title = "Home Page";
}

<style>
    .carousel {
        margin-top: 3%;
    }
</style>

<div class="container text-center">
    <div id="carousel" class="carousel slide" data-ride="carousel" style="display: inline-block;">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
            <li data-target="#carousel" data-slide-to="3"></li>
            <li data-target="#carousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/client.jpg" alt="..." width="1000" height="1000">
                <div class="carousel-caption">
                    <h3>You can find information about clients.</h3>
                    <p><a href="~/Client/Index">Learm more</a></p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/managers.jpg" alt="..." width="1000" height="1000">
                <div class="carousel-caption">
                    <h3>You can find information about managers.</h3>
                    <p><a href="~/Manager/Index">Learm more</a></p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/products.jpg" alt="..." width="1000" height="1000">
                <div class="carousel-caption">
                    <h3>You can find information about products.</h3>
                    <p><a href="~/Product/Index">Learm more</a></p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/sales.jpg" alt="..." width="1000" height="1000">
                <div class="carousel-caption">
                    <h3>You can find information about sales.</h3>
                    <p><a href="~/Sale/Index">Learm more</a></p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/charts.jpg" alt="..." width="1000" height="1000">
                <div class="carousel-caption">
                    <h3>You can see the charts.</h3>
                    <p><a href="~/Charts/Index">Learm more</a></p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
